<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterIdActivity"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/id_back"
        android:layout_width="15dp"
        android:layout_height="26.1dp"
        android:background="@drawable/back_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임을 생성해주세요."
        android:textSize="28dp"
        android:textColor="@color/darkmode"
        android:textStyle="bold"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/gainid"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nick_len"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="16자리 이하의"/>
        <TextView
            android:id="@+id/nick_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="숫자나 문자"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/id_nextbtn"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:text="다음"
            android:textColor="@color/opposite"
            android:background="@drawable/register_button"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:elevation="10dp"/>
    </FrameLayout>


</LinearLayout>